{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "virtualNetworksName": {
        "type": "string",
        "defaultValue": "myVnet"
      },
      "location": {
        "type": "string"
      }
    },
    "resources": [
      {
        "name": "[parameters('virtualNetworksName')]",
        "type": "Microsoft.Network/virtualNetworks",
        "location": "[parameters('location')]",
        "tags": {},
        "apiVersion": "2021-05-01",
        "properties": {
          "addressSpace": {
            "addressPrefixes": [
              "10.0.0.0/16"
            ]
          },
          "subnets": [
            {
              "name": "appsubnet",
              "properties": {
                "addressPrefix": "10.0.1.0/24",
                "delegations": [
                    {
                      "name": "Microsoft.Web/serverFarms",
                      "properties": {
                        "serviceName": "Microsoft.Web/serverFarms"
                      },
                      "type": "Microsoft.Network/virtualNetworks/subnets/delegations"
                    }
                ]
              }
            },
            {
                "name": "dbsubnet",
                "properties": {
                  "addressPrefix": "10.0.2.0/24",
                  "delegations": [
                      {
                        "name": "Microsoft.Web/serverFarms",
                        "properties": {
                          "serviceName": "Microsoft.Web/serverFarms"
                        },
                        "type": "Microsoft.Network/virtualNetworks/subnets/delegations"
                      }
                  ]
                }
              }
          ]
        }
      }
    ],
    "outputs": {
      "appsubnetId": {
        "value": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('virtualNetworksName'), 'appsubnet')]",
        "type": "string"
      },
      "dbsubnetId": {
        "value": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('virtualNetworksName'), 'dbsubnet')]",
        "type": "string"
      }
    }
  }
