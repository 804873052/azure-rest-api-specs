{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string"
        },
        "vaultName": {
            "type": "string"
        },
        "secretName": {
            "type": "string"
        },
        "azureTenantId": {
            "type": "securestring"
        },
        "azureObjectId": {
            "type": "securestring"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.KeyVault/vaults",
            "apiVersion": "2023-02-01",
            "name": "[parameters('vaultName')]",
            "location": "[parameters('location')]",
            "properties": {
                "sku": {
                    "family": "A",
                    "name": "standard"
                },
                "tenantId": "[parameters('azureTenantId')]",
                "accessPolicies": [
                    {
                        "tenantId": "[parameters('azureTenantId')]",
                        "objectId": "[parameters('azureObjectId')]",
                        "permissions": {
                            "certificates": [
                                "get",
                                "list",
                                "create"
                            ],
                            "keys": [
                                "get",
                                "list",
                                "create"
                            ],
                            "secrets": [
                                "get",
                                "list",
                                "set"
                            ]
                        }
                    }
                ],
                "enabledForDeployment": false,
                "enableSoftDelete": true,
                "publicNetworkAccess": "Enabled"
            }
        },
        {
            "type": "Microsoft.KeyVault/vaults/secrets",
            "apiVersion": "2023-02-01",
            "name": "[concat(parameters('vaultName'),'/',parameters('secretName'))]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.KeyVault/vaults', parameters('vaultName'))]"
            ],
            "properties": {
                "attributes": {
                    "enabled": true
                }
            }
        }
    ],
    "outputs": {
        "vaultUri":{
            "type": "string",
            "value": "[reference(resourceId('Microsoft.KeyVault/vaults', parameters('vaultName'))).properties.vaultUri]"
        }
    }
}
